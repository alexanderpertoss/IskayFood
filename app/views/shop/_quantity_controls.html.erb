<div id="product_controls_<%= product.id %>"
     class="position-absolute top-0 start-0 w-100 p-4 main-product-background text-white d-flex justify-content-between align-items-center">

  <h3 class="text-white text-uppercase"><%= product.name %></h3>

  <%# Controles de Cantidad (Grupo de botones) %>
  <div class="btn-group" role="group">
    <%= button_to "-", remove_from_cart_path(id: product.id), # Asumiendo que tienes esta ruta
                  method: :post,
                  class: "btn btn-secondary text-white font-jaro",
                  data: { turbo_stream: true } %>
    
    <span class="btn btn-primary text-white font-jaro">
      <%= @cart.quantity_of(product) || 1 %>
    </span>
    
    <%= button_to "+", add_to_cart_path(id: product.id),
                  method: :post,
                  class: "btn btn-secondary text-white font-jaro",
                  data: { turbo_stream: true } %>
  </div>
</div>