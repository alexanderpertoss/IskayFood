<% content_for :body_class, "shop-layout-black" %>

<div id="shop-header" class="col d-flex flex-column align-items-center text-uppercase">
    <div class="section-title font-staatliches">Shop</div>
</div>

<section id="main-products" class="pt-5 pb-5">
    <div id="main-products-container" class="container pt-2 pb-2">
        <div class="row p-1">
            <div class="col-12 col-md-6 col-lg-6 co d-flex flex-column gap-3">
                <div>
                    <div class="position-relative overflow-hidden shadow-sm main-product"
                        style="background-image: url('<%= url_for(@first_product.images.fourth) if @first_product.images.attached? %>');">
                        <%= render 'shop/product_controls', product: @first_product %>
                    </div>
                </div>
                <div>
                    <div class="position-relative overflow-hidden shadow-sm main-product"
                        style="background-image: url('<%= url_for(@second_product.images.first) if @second_product.images.attached? %>');">
                        <%= render 'shop/product_controls', product: @second_product %>
                    </div>
                </div>
            </div>
            <div class="col d-flex flex-column gap-3">
                <div>
                    <div class="position-relative overflow-hidden shadow-sm main-product-large"
                        style="background-image: url('<%= url_for(@third_product.images.fifth) if @third_product.images.attached? %>');">
                        <%= render 'shop/product_controls', product: @third_product %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div id="shop-header" class="col d-flex flex-column align-items-left text-uppercase p-3">
    <div class="section-title2 font-staatliches px-5">Other products we offer</div>
</div>

