

<div class="hero-section2 text-white d-flex align-items-end justify-content-center text-center text-uppercase jarallax">
  
  <%# La imagen de fondo controlada por Jarallax %>
  <% if @service.id == 1 or @service.id == 2 %>
    <%# La imagen de fondo controlada por Jarallax %>
    <div class="jarallax-img" style="background-image: url('<%= url_for(@service.images.third) if @service.images.attached? %>');"></div>
  <% end %>

  <% if @service.id == 3 %>
    <%# La imagen de fondo controlada por Jarallax %>
    <div class="jarallax-img" style="background-image: url('<%= url_for(@service.images.third) if @service.images.attached? %>');"></div>
  <% end %>

  <%# El contenido que permanece estático encima %>
  <div class="hero-content pb-4" style="z-index: 2;"> 
    <h1 class="font-staatliches section-title"><%= @service.name %></h1>
    <p class="lead font-staatliches section-title3">
      <%= @service.description %>
    </p>
  </div>
  
</div>


<div class="col d-flex flex-column align-items-center decorative-divider">
    <%= image_tag "patron_decorativo_grey.png", class: "img-fluid" %>
</div>

<div class="container-fluid p-5">
    <div class="row">
        <div class="col-12 px-5">
            <h1 class="font-staatliches text-primary-color">A unique experience</h1>
            <p class="font-anarrow about-info">
                <%= @service.description %>
            </p>
        </div>
    </div>
</div>

<div class="col d-flex flex-column align-items-center decorative-divider">
    <%= image_tag "patron_decorativo_grey.png", class: "img-fluid" %>
</div>


<div class="container-fluid p-0"> <%# Añadimos p-0 para evitar márgenes laterales %>
  <div class="row g-0 text-uppercase text-white align-items-stretch"> <%# align-items-stretch iguala alturas %>
    
    <div class="col-12 col-md-6 col-lg-6 details-col1 p-5 d-flex flex-column justify-content-center">
      <% if @service.id == 1 %>
        <h3 class="mb-4 text-white font-staatliches">ASADO</h3>
      <% end %>
      
      <div class="product-description-highlight my-4">
        <p class="font-anarrow text-white display-6 lh-sm">
          <%= @service.description %>
        </p>
      </div>
      
      <div class="mt-5 d-flex justify-content-center">
        <%= link_to "Contact us", contact_page_path, class: "btn btn-primary font-staatliches px-5 py-3" %>
      </div>
    </div>

    <%# COLUMNA CON PARALLAX %>
    <div class="col-12 col-md-6 col-lg-6 p-0 jarallax overflow-hidden" id="details-image-parallax" style="min-height: 500px;">
      <div class="jarallax-img" style="background-image: url('<%= url_for(@service.images.second) if @service.images.attached? %>');"></div>
    </div>

  </div>
</div>

<div class="container-fluid p-0"> <%# Añadimos p-0 para evitar márgenes laterales %>
  <div class="row g-0 text-uppercase text-white align-items-stretch"> <%# align-items-stretch iguala alturas %>
    
    <%# COLUMNA CON PARALLAX %>
    <div class="col-12 col-md-6 col-lg-6 p-0 jarallax overflow-hidden" id="details-image-parallax" style="min-height: 500px;">
      <div class="jarallax-img" style="background-image: url('<%= url_for(@service.images.fourth) if @service.images.attached? %>');"></div>
    </div>

    <div class="col-12 col-md-6 col-lg-6 details-col1 p-5 d-flex flex-column justify-content-center">
      <% if @service.id == 1 %>
        <h3 class="mb-4 text-white font-staatliches">EMPANADAS</h3>
      <% end %>
      
      <div class="product-description-highlight my-4">
        <p class="font-anarrow text-white display-6 lh-sm">
          <% if @service.id == 1 %>
            <%= Product.fourth.description %>
          <% else %>
            <%= @service.description %>
          <% end %>
        </p>
      </div>
      
      <% if @service.id == 1 %>
        <div class="mt-5 d-flex justify-content-center">
          <%= link_to "See more", product_path(4), class: "btn btn-primary font-staatliches px-5 py-3" %>
        </div>
      <% end %>
    </div>

    

  </div>
</div>
