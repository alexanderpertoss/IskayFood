<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      
      <%= form_with model: product, local: true, html: { multipart: true }, class: "p-4 border rounded-3 bg-light shadow-sm" do |form| %>

        <% if product.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h4>
            <ul class="mb-0">
              <% product.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-floating mb-3">
          <%= form.text_field :name, class: "form-control", placeholder: "Product Name", required: true %>
          <%= form.label :name, "Product Name" %>
        </div>

        <div class="form-floating mb-3">
          <%# Usamos inputmode: 'decimal' para teclado numérico en móviles %>
          <%= form.text_field :price, class: "form-control", placeholder: "Price", required: true, inputmode: "decimal" %>
          <%= form.label :price, "Price" %>
        </div>

        <div class="mb-3">
          <%= form.label :description, "Description", class: "form-label" %>
          <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "A brief description of the product...", required: true %>
        </div>
        
        <div class="mb-3">
          <%= form.label :weight, "Weight (Kg)", class: "form-label" %>
          <%= form.number_field :weight, step: 0.001, class: "form-control custom-input-line", placeholder: "e.g. 0.250" %>
        </div>

        <div class="mb-3">
          <%= form.label :images, "Product images", class: "form-label" %>
          <%= form.file_field :images, multiple: true, accept: "image/*", class: "form-control custom-input-line" %>
        </div>

        <div class="d-grid gap-2 mt-4 font-staatliches">
          <%= form.submit "Save Product", class: "btn btn-primary btn-lg" %>
          <%= link_to "Back", products_path, class: "btn btn-secondary btn-lg" %>
        </div>
        
      <% end %>
      
    </div>
  </div>
</div>