<div class="hero-section2 text-white d-flex align-items-end justify-content-center text-center text-uppercase jarallax">
  
  <% if @product.id == 1 %>
    <%# La imagen de fondo controlada por Jarallax %>
    <div class="jarallax-img" style="background-image: url('<%= url_for(@product.images.last) if @product.images.attached? %>');"></div>
  <% end %>

  <% if @product.id == 2 %>
    <%# La imagen de fondo controlada por Jarallax %>
    <div class="jarallax-img" style="background-image: url('<%= url_for(@product.images.third) if @product.images.attached? %>');"></div>
  <% end %>

  <% if @product.id == 3 %>
    <%# La imagen de fondo controlada por Jarallax %>
    <div class="jarallax-img" style="background-image: url('<%= url_for(@product.images.fifth) if @product.images.attached? %>');"></div>
  <% end %>

  <% if @product.id == 4 %>
    <%# La imagen de fondo controlada por Jarallax %>
    <div class="jarallax-img" style="background-image: url('<%= url_for(@product.images.fourth) if @product.images.attached? %>');"></div>
  <% end %>

  <% if @product.id == 5 %>
    <%# La imagen de fondo controlada por Jarallax %>
    <div class="jarallax-img" style="background-image: url('<%= url_for(@product.images.fourth) if @product.images.attached? %>');"></div>
  <% end %>

  <%# El contenido que permanece estático encima %>
  <div class="hero-content pb-4" style="z-index: 2;"> 
    <h1 class="font-staatliches section-title"><%= @product.name %></h1>
    <p class="lead font-staatliches section-title3">
      <%= @product.description %>
    </p>
  </div>
  
</div>

<div class="col d-flex flex-column align-items-center decorative-divider">
    <%= image_tag "patron_decorativo_grey.png", class: "img-fluid" %>
</div>

<div class="container-fluid p-5">
    <div class="row">
        <div class="col-12 px-5">
            <h1 class="font-staatliches text-primary-color">The unique taste of <%= @product.name %></h1>
            <p class="font-anarrow about-info">
                <%= @product.description %>
            </p>
        </div>
    </div>
</div>

<div class="col d-flex flex-column align-items-center decorative-divider">
    <%= image_tag "patron_decorativo_grey.png", class: "img-fluid" %>
</div>

<div class="container-fluid">
  <div class="row text-white">
    <div class="col-12 col-md-6 col-lg-6 details-col2 p-5 d-flex flex-column justify-content-center">
      
      <%# Descripción llamativa %>
      <div class="product-description-highlight my-4">
        <p class="font-anarrow text-white display-6 lh-sm">
          <%= @product.description %>
        </p>
      </div>
      
      <div class="p-3 d-flex justify-content-center mt-auto">
        <%= button_to "Buy Now", "#", class: "btn btn-primary font-staatliches px-5 py-3 fs-5" %>
      </div>
    </div>
    <div class="col-12 col-md-6 col-lg-6 p-0 jarallax overflow-hidden" id="details-image-parallax" style="min-height: 500px;">
      <div class="jarallax-img" style="background-image: url('<%= url_for(@product.images.first) if @product.images.attached? %>');"></div>
    </div>



    <div class="col-12 col-md-6 col-lg-6 p-0 jarallax overflow-hidden" id="details-image-parallax" style="min-height: 500px;">
      <% if @product.id == 1 or @product.id == 2 or @product.id == 4 %>
        <div class="jarallax-img" style="background-image: url('<%= url_for(@product.images.fourth) if @product.images.attached? %>');"></div>
      <% end %>
      <% if @product.id == 3 or @product.id == 5 %>
        <div class="jarallax-img" style="background-image: url('<%= url_for(@product.images.second) if @product.images.attached? %>');"></div>
      <% end %>
    </div>

    <div class="col-12 col-md-6 col-lg-6 details-col2 p-5 d-flex flex-column justify-content-center">
      
      <%# Descripción llamativa %>
      <div class="product-description-highlight my-4">
        <p class="font-anarrow text-white display-6 lh-sm">
          <% if @product.id == 4  %>
            <span class="font-staatliches">Offer on business</span><br>
            Elevate your business gatherings with our premium artisanal empanada catering. We blend South American tradition with professional elegance, delivering the perfect hand-held culinary experience for your meetings, conferences, and corporate events.
          <% else %>
            <%= @product.description %>
          <% end %>
        </p>
      </div>
      
      <div class="p-3 d-flex justify-content-center mt-auto">
        <button type="button" 
          class="btn btn-primary font-staatliches px-5 py-3 fs-5" 
          data-bs-toggle="modal" 
          data-bs-target="#quoteModal">
          REQUEST IT
        </button>
      </div>
    </div>
  </div>
</div>



<div class="modal fade" id="quoteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content border-0 rounded-0 bg-dark text-white shadow-lg">
      
      <div class="modal-header border-0 p-4 pb-0">
        <h2 class="modal-title text-white font-staatliches fs-1" id="quoteModalLabel">CATERING INQUIRY</h2>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body p-4 p-md-5">
        <form id="catering-simulation-form" onsubmit="event.preventDefault(); alert('We received your request and we will contact you as soon as possible!'); bootstrap.Modal.getInstance(document.getElementById('quoteModal')).hide();">
          
          <div class="row">
            <div class="col-md-6 mb-4">
              <input type="text" class="form-control custom-input-line" placeholder="Full name" required>
            </div>
            <div class="col-md-6 mb-4">
              <input type="text" class="form-control custom-input-line" placeholder="Company name">
            </div>
          </div>

           <div class="row">
            <div class="col-md-6 mb-4">
              <input type="text" class="form-control custom-input-line" placeholder="Email" required>
            </div>
            <div class="col-md-6 mb-4">
              <input type="text" class="form-control custom-input-line" placeholder="Phone number">
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-4">
              <label class="form-label font-staatliches mb-0 text-white">Type of Event</label>
              <select class="form-select custom-input-line">
                <option selected>Corporate Lunch</option>
                <option>Conference</option>
                <option>Office Celebration</option>
                <option>Other</option>
              </select>
            </div>
            <div class="col-md-6 mb-4">
              <label class="form-label font-staatliches mb-0 text-white">Estimated Guests</label>
              <input type="number" class="form-control custom-input-line" placeholder="e.g. 50">
            </div>
          </div>

          <div class="mb-5">
            <label class="form-label font-staatliches mb-0">Additional Details</label>
            <textarea class="form-control custom-input-line" rows="3" placeholder="Dietary restrictions, preferred date, etc."></textarea>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary py-3 fs-5">SEND REQUEST</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>