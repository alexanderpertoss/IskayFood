<div class="container my-5">
  <h2 class="mb-4 text-center font-staatliches">Customer Reviews</h2>

  <% if notice.present? %>
    <div class="alert alert-success font-staatliches text-center"><%= notice %></div>
  <% end %>

  <div class="d-flex justify-content-between mb-4">
    <span class="badge bg-primary d-flex align-items-center px-3">
      Total Reviews: <%= @reviews.count %>
    </span>
  </div>

  <%= link_to 'Orders', orders_path, class: 'btn btn-primary' %>
  <%= link_to 'Products', products_path, class: 'btn btn-primary' %>
  <%= link_to 'Bookings', bookings_list_path, class: 'btn btn-primary' %>
  <%= link_to 'Messages', contacts_path, class: 'btn btn-primary' %>
  <%= link_to 'Reviews', reviews_path, class: 'btn btn-primary' %>
  <%= link_to 'Stripe Dashboard', "https://dashboard.stripe.com/", class: 'btn btn-primary', target: "_blank" %>

  <br><br>

  <% if @reviews.any? %>
    <div class="table-responsive">
      <table class="table table-hover table-striped table-bordered align-middle">
        <thead class="table-dark font-staatliches">
          <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col">Name</th>
            <th scope="col">Review Message</th>
            <th scope="col" class="text-center">Options</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each_with_index do |review, index| %>
            <tr>
              <th scope="row" class="text-center"><%= index + 1 %></th>
              <td class="fw-bold"><%= review.name %></td>
              <td class="text-muted italic">
                "<%= truncate(review.message, length: 80) %>"
              </td>
              <td class="text-center">
                <div class="d-flex justify-content-center gap-2">
                  <%= link_to "Show", review, class: "btn btn-info btn-sm text-white" %>
                  <%= link_to "Delete", review, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info text-center" role="alert">
      No reviews found.
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "Add New Review", new_review_path, class: "btn btn-success btn-lg font-staatliches" %>
  </div>
</div>