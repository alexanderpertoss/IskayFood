<%= form_with(model: order, class: "contact-form") do |form| %>
  
  <%# Panel de Errores con estilo Bootstrap %>
  <% if order.errors.any? %>
    <div class="alert alert-danger font-staatliches shadow-sm mb-4">
      <h5 class="alert-heading"><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h5>
      <ul class="mb-0 small">
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Único campo editable: Shipping Code %>
  <div class="mb-5">
    <%= form.label :shipping_code, "SHIPPING / TRACKING CODE", class: "form-label font-staatliches text-muted mb-0" %>
    <%= form.text_field :shipping_code, 
        class: "form-control custom-input-line", 
        placeholder: "Enter tracking number (e.g., DHL-12345)...",
        autofocus: true %>
    <small class="text-muted font-jaro mt-2 d-block">This code will be visible to the customer for order tracking.</small>
  </div>

  <%# Botón de Guardar Centrado %>
  <div class="d-flex justify-content-center gap-3">
    <%= form.submit "UPDATE SHIPPING CODE", class: "btn btn-primary-custom font-staatliches py-2 px-5 shadow-sm" %>
  </div>

<% end %>